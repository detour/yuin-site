<% title "Course" %>

<div class="view_container">  
  <div class="view_row">
    <label>Name:</label>
    <span class="field_content"><%=h @course.name %></span>
  </div>
  
  <div class="view_row">
    <label>Term:</label>
    <span class="field_content"><%=h @course.term %></span>
  </div>
  
</div>

<div class="view_row clear_fix">
  <%= link_to "Edit", edit_admin_course_path(@course) %> |
  <%= link_to "Delete", [:admin, @course], :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", admin_courses_path %>
</div>
